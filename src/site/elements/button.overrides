/*******************************
         Site Overrides
*******************************/

.ui.buttons .or:before {
  font-size: 70%;
}

.ui[class*="link button"] {
  padding: 0;
  background: transparent;

  color: @linkColor;
  text-decoration: @linkUnderline;
  font-weight: normal;

  &:hover, &:active, &:focus {
    background: transparent;
    color: @linkHoverColor;
    text-decoration: @linkHoverUnderline;
  }
}
